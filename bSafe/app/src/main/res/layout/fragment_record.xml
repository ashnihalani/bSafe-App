<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_weight="1">

    <Button
        android:text="Start Recording"
        android:layout_width="match_parent"
        android:id="@+id/Record"
        android:layout_weight="0.20"
        android:elevation="0dp"
        android:textSize="25sp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight=".20"
        android:layout_width="match_parent">

        <Button
            android:text="Call 911"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Call911"
            android:layout_weight=".5"
            android:textSize="25sp" />

        <Button
            android:text="Text 911"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Text911"
            android:layout_weight=".5"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ErmCall"
            android:layout_weight="1"
            android:text="Call Emergency Number"
            android:textSize="25sp" />

        <Button
            android:text="Text Emergency Number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ErmText"
            android:layout_weight="1"
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:text="Save Recording"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Save"
        android:layout_weight="0.20"
        android:textSize="25sp" />

</LinearLayout>